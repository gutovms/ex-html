@charset "UTF-8";

* {
    font-family: Arial, Helvetica, sans-serif;

    /*
    medidas Absolutas
    cm, mm, in, px, pt, pc

    Medidadas Relativas
    em, ex, rem, vw, % 

    16px == 1em

    */

    font-size: 1em ;

    /* 
    ligther, normal, bold, bolder 
            100 - 900
    */

    font-weight: normal;

    /*
    italic, normal
    */

    font-style: normal;
    
    text-decoration: underline;

     /*
        shorthand font

        - font-style -> font-weigth ->  font-size -> font-family 
     */

     font: normal normal 1em Arial, Helvetica, sans-serif;


   
}


