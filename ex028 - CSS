@charset "UTF-8";

/*
    Em HTML é id = em CSS é #
    Em HTML é class = em CSS é . 
    em HTML é pseudo-classe = em CSS :
*/

body {
    
     /*
        shorthand font

        - font-style -> font-weigth ->  font-size -> font-family 
     */
    
     font: normal 16px Arial, Helvetica, sans-serif;
     background-color: #d4d7d5;
}

a {
    color:#ff0000;
    text-decoration: none;
    font-weight: bold;
}

a:visited {
    color: #8b0000;
    text-decoration: underline;
}

a:active {
    color: #ffff00;
}
